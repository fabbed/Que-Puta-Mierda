!!! XML
!!! Strict
%html{html_attrs("es")}
  %head
    %meta{content_type_attrs("text/html")}
    %title=yield(:title)
    = render :partial => "shared/css_includes"
    = render :partial => "shared/js_includes"
  %body
    #content
      .container_16
        .grid_16#header
        .grid_7#navigation
          =tabnav :main
        .grid_9
          .introduction_text


        .grid_16#main.round_corners.back_white.padding_10
          = yield
        .clear
              
    = yield :javascript
    
    -if flash[:notice]
      =render :partial => "shared/flash_message", :locals => {:message => flash[:notice]}

