!!! XML
!!! Strict
%html{html_attrs("es")}
  %head
    %meta{content_type_attrs("text/html")}
    %title=yield(:title)
    = render :partial => "shared/css_includes"
    = render :partial => "shared/js_includes"
  %body
    #content
      .container_16
        .grid_16#header
          =image_tag "que-puta-mierda-logo.gif"
        .grid_7#navigation
          =tabnav :main
        .grid_9
          .introduction_text
            A ver que dicen las estadisticas!


        .grid_16#main.round.back_white.padding_10
          = yield
        .clear
              
    = yield :javascript
    
    -if flash[:notice]
      =render :partial => "shared/flash_message", :locals => {:message => flash[:notice]}

