!!! XML
!!! Strict
%html{html_attrs("es")}
  %head
    %meta{content_type_attrs("text/html")}
    %title=yield(:title)
    = render :partial => "shared/css_includes"
    = render :partial => "shared/js_includes"
  %body
    #content
      .container_16
        .grid_16#header
          =image_tag "que-puta-mierda-logo.gif"
        .grid_16#navigation
          =tabnav :main
          
        .grid_16#main
          = yield
        .clear
              


        %br.clear
        .grid_16#footer
          =render :partial => "shared/footer"

    = yield :javascript
    
    -if flash[:notice]
      =render :partial => "shared/flash_message", :locals => {:message => flash[:notice]}

