   t.links_to :controller => '/categories', :action => "show", :id=> @category, :ordenar_por => "putadas"
   t.highlights_on :controller => '/categories', :action => "show", :id=> @category.name, :ordenar_por => "putadas"
   t.highlights_on :controller => '/categories', :action => "show", :id=> @category.name, :ordenar_por => ""      
  end 

  add_tab do |t|
   t.named 'Las cagadas m치s grandes'
   t.titled 'Las cagadas m치s grandes'
   t.links_to :controller => '/stories', :action => "flops", :tiempo=>"semana"
   t.links_to :controller => '/categories', :action => "show", :id=> @category, :ordenar_por => "cagadas"
   t.highlights_on :controller => '/categories', :action => "show", :id=> @category.name, :ordenar_por => "cagadas"   
